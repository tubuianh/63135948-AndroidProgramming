<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_marginStart="30dp"
        android:paddingTop="3dp"

        >

        <Button
            android:id="@+id/btnChia"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:backgroundTint="#FF8707"
            android:text="/"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>
        <Button
            android:id="@+id/btnNhan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:backgroundTint="#FF8707"
            android:text="x"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>


        <Button
            android:id="@+id/btnAc"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:backgroundTint="#868E93"
            android:text="AC"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#474A4C"
            android:text="8"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="#474A4C"
            android:text="9"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#474A4C"
            android:text="7"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>


        <Button
            android:id="@+id/btnCe"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#868E93"
            android:text="CE"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="#474A4C"
            android:text="5"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="#474A4C"
            android:text="6"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:backgroundTint="#474A4C"
            android:text="3"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btnCham"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="2"
            android:backgroundTint="#474A4C"
            android:text="."
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btnBang"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="3"
            android:backgroundTint="#FF8707"
            android:text="="
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:backgroundTint="#474A4C"
            android:text="2"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#474A4C"
            android:text="1"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btnCong"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:backgroundTint="#FF8707"
            android:text="+"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btnTru"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:backgroundTint="#FF8707"
            android:text="-"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#474A4C"
            android:text="4"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>


        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:backgroundTint="#474A4C"
            android:text="0"
            android:layout_marginLeft="8dp"
            android:textSize="30sp">

        </Button>


    </GridLayout>

</RelativeLayout>